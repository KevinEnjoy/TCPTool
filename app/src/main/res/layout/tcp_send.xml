<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <Button
            android:id="@+id/button2"
            android:text="管理命令"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button"
            />

        <Button
            android:id="@+id/button1"
            android:text="清除日志"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/button"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        >
        <TextView
            android:id="@+id/textView"
            android:text="命令"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/log"
            />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            />

        <Button
            android:id="@+id/button3"
            android:text="发送数据"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            style="@style/button"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/colorWhite50"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd\n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd\n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd\n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd\n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd \n ddd"
                style="@style/log"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>