<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"><shape>
        <gradient android:startColor="@color/btn_selector_white_normal" android:endColor="@color/btn_selector_white_normal"
            android:angle="90" />
        <solid android:color="@color/btn_selector_white_normal" />
        <!-- 背景填充颜色 -->
        <stroke android:width="1dp" android:color="@color/btn_selector_white_normal" />
        <!-- 描边，边框宽度、颜色 -->
        <padding android:bottom="0dp" android:left="0dp" android:right="3dp" android:top="3dp" />
        <!-- 四周留出来的空白 -->
    </shape></item>

    <item android:state_pressed="true"><shape>
        <gradient android:startColor="@color/btn_selector_white_press" android:endColor="@color/btn_selector_white_press"
                  android:angle="90" />
        <solid android:color="@color/btn_selector_white_press" />
        <!-- 背景填充颜色 -->
        <stroke android:width="1dp" android:color="@color/btn_selector_white_press" />
        <!-- 描边，边框宽度、颜色 -->
        <padding android:bottom="0dp" android:left="0dp" android:right="3dp" android:top="3dp" />
        <!-- 四周留出来的空白 -->
    </shape></item>
</selector>